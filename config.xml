<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
	xmlns:gap   = "http://phonegap.com/ns/1.0"
	id          = "com.Degrees314.XewaCustomer"
	versionCode = "10"
	version     = "0.4.5" >

	<!-- versionCode is optional and Android only -->

	<name>XEWA</name>

	<preference name="windows-target-version" value="10.0"/>
	<preference name="windows-appx-target" value="uap" />
	<preference name="windows-arch" value="anycpu" />

	<preference name="orientation" value="portrait"/>
	<preference name="fullscreen" value="true"/>
	<preference name="KeepRunning" value="false"/>
	<preference name="SplashScreen" value="screen"/>
	<preference name="android-build-tool" value="gradle"/>

	<plugin name="cordova-plugin-splashscreen" source="npm"/>

	<description>
		XEWA adalah aplikasi untuk menyewa pakaian karnaval untuk anak-anak. Jadi, Anda sebagai orang tua tidak perlu susah payah membeli pakaian karnaval yang mungkin hanya dipakai sekali saja. Sewa saja, di XEWA.
	</description>

	<author href="https://xewa.id" email="developer@xewa.id">
		XEWA Developer Team
	</author>

	<icon src="res/android/icons/ldpi.png" platform="android" qualifier="ldpi" />
	<icon src="res/android/icons/mdpi.png" platform="android" qualifier="mdpi" />
	<icon src="res/android/icons/hdpi.png" platform="android" qualifier="hdpi" />
	<splash src="res/android/splash/ldpi.png" platform="android" qualifier="ldpi" />
	<splash src="res/android/splash/mdpi.png" platform="android" qualifier="mdpi" />
	<splash src="res/android/splash/hdpi.png" platform="android" qualifier="hdpi" />

	<icon platform="winphone" width="150" height="150" src="res/windows/Square150x150Logo.scale-100.png" />
	<icon platform="winphone" width="360" height="360" src="res/windows/Square150x150Logo.scale-240.png" />
	<icon platform="winphone" width="71"  height="71"  src="res/windows/Square71x71Logo.scale-100.png" />
	<icon platform="winphone" width="170" height="170" src="res/windows/Square71x71Logo.scale-240.png" />
	<icon platform="winphone" width="310" height="150" src="res/windows/Wide310x150Logo.scale-100.png" />
	<icon platform="winphone" width="744" height="360" src="res/windows/Wide310x150Logo.scale-240.png" />
	<icon platform="winphone" width="310" height="310" src="res/windows/Square310x310Logo.scale-100.png" />
	<splash platform="winphone" width="620"  height="300"  src="res/windows/SplashScreen.scale-100.png" />
</widget>